@model EIDSS.Web.Areas.Outbreak.ViewModels.OutbreakPageViewModel;
@{
    ViewData["Title"] = Localizer.GetString(HeadingResourceKeyConstants.OutbreakManagementListOutbreakManagementListHeading);
}
<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-lg-11">
                <div class="panel-heading">
                    <h2>@Localizer.GetString(HeadingResourceKeyConstants.OutbreakManagementListOutbreakManagementListHeading)</h2>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        @if (Model.OutbreakPermissions.Create)
        {
            <button id="bSessionAdd" class="btn btn-primary mt-3" onclick="location.href='@Url.Action("Index", "OutbreakSession", new { Area = "Outbreak" })'">@Localizer.GetString(ButtonResourceKeyConstants.AddButton)</button>
        }
    </div>
    <div class="row col-lg-12">
        <div class="col-lg-12 pull-right text-right">
            <a class="text-right" href='@Url.Action("Search", "OutbreakPage", new {Area = "Outbreak"})'>@Localizer.GetString(FieldLabelResourceKeyConstants.OutbreakManagementListAdvancedSearchFieldLabel)</a>
        </div>
    </div>
    <partial name="_SessionList" />
</div>
@using EIDSS.Web.Components.Human.Person
@model EIDSS.Web.Areas.Human.ViewModels.Person.PersonDetailsViewModel

@{
    ViewData["Title"] = Localizer.GetString(HeadingResourceKeyConstants.PersonPageHeading);
}

<partial name="_ErrorModalPartial" />
<partial name="_InformationalModalPartial" for="InformationalMessage" />
<partial name="_WarningModalPartial" />
<partial name="_NewPersonRecordSuccessModalPartial" />
<partial name="_VerifyAgeModalPartial" />

<div class="card">
    <div class="card-header">
        <h3 heading-for="@HeadingResourceKeyConstants.PersonPageHeading"></h3>
    </div>
    <div class="card-body">
        <component type="typeof(PersonSections)" render-mode="Server" param-HumanMasterID="Model.HumanMasterID" param-IsReview="Model.IsReview" />
    </div>
</div>

<script src="~/js/Human/person.js"></script>
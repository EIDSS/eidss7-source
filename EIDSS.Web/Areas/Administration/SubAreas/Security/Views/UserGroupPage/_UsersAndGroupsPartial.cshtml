            actors.push(value[0]);
        });
        var idfEmployeeList = actors.join(", ");
        /*alert(idfEmployeeList);*/

        var idfEmployeeGroup = $("[id$=idfEmployeeGroup]").val();
        /*alert(idfEmployeeGroup);*/


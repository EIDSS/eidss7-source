@model EIDSS.Web.Areas.Administration.SubAreas.Security.ViewModels.Site.SiteSearchViewModel
@{
    ViewData["Title"] = Localizer.GetString(HeadingResourceKeyConstants.SearchSitesPageHeading);
}

<partial name="_InformationalModalPartial" for="InformationalMessage" />
<partial name="_WarningModalPartial" />
<partial name="_ErrorModalPartial" />

<div class="card">
    <div class="card-header">
        <h3 heading-for="@HeadingResourceKeyConstants.SearchSitesPageHeading"></h3>
    </div>
    <div class="card-body">
        @await Component.InvokeAsync("SiteSearch", new { recordSelectionIndicator = false, showInModalIndicator = false, interfaceEditorSet = InterfaceEditorResourceSetEnum.SearchSites })
    </div>
</div>

@if (ViewBag.JavaScriptFunction != null)
{
    <script type="text/javascript">
        @Html.Raw(ViewBag.JavaScriptFunction)
    </script>
}
@using EIDSS.Web.Components.Administration.Deduplication.VeterinaryDiseaseReport
@using EIDSS.Web.Enumerations
@model EIDSS.Web.Areas.Veterinary.ViewModels.VeterinaryDiseaseReport.SearchVeterinaryDiseaseReportPageViewModel

@{
    if (Model.ReportType == VeterinaryReportTypeEnum.Livestock)
    { ViewData["Title"] = Localizer.GetString(HeadingResourceKeyConstants.DeduplicationLivestockReportLivestockDiseaseReportDeduplicationHeading); }
    else
    { ViewData["Title"] = @Localizer.GetString(HeadingResourceKeyConstants.DeduplicationAvianReportPageHeading); }
}

<div class="card">
    <div class="card-header">
        @if (Model.ReportType == VeterinaryReportTypeEnum.Livestock)
        { <h3>@Localizer.GetString(HeadingResourceKeyConstants.DeduplicationLivestockReportLivestockDiseaseReportDeduplicationHeading)</h3> }
        else
        { <h3>@Localizer.GetString(HeadingResourceKeyConstants.DeduplicationAvianReportPageHeading)</h3> }
    </div>
    <div class="card-body">
        <component type="typeof(SearchVeterinaryDiseaseReportDeduplication)" render-mode="Server" param-Mode="@SearchModeEnum.Default" param-CallbackUrl="string.Empty" param-ReportType="@Model.ReportType" param-ShowSelectedRecordsIndicator="@Model.ShowSelectedRecordsIndicator" />
    </div>
    <div class="card-footer">
    </div>
</div>

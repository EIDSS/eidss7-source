@using EIDSS.Domain.ViewModels.Outbreak
@using EIDSS.Web.Components.CrossCutting
@using EIDSS.Web.Components.Shared
@using EIDSS.Web.Enumerations

@inherits CaseLocationSectionBase

<div class="container-fluid">
    <div class="row">
        <div class="col-11">
            <h4 class="header">@Localizer.GetString(HeadingResourceKeyConstants.CreateVeterinaryCaseCaseLocationHeading)</h4>
        </div>
        <div class="col-1 text-right">
            @if (Model.CreatePermissionIndicator && Model.CaseId is null)
            {
                <a id="editCaseLocationSectionButton" href="#caseDiseaseReportWizard-h-1" class="edit-section">
                    <span class="fas fa-edit fa-lg"></span>
                </a>
            }
            else if (Model.CaseDisabledIndicator == false && Model.WritePermissionIndicator)
            {
                <a id="editCaseLocationSectionButton" href="#caseDiseaseReportWizard-h-1" class="edit-section">
                    <span class="fas fa-edit fa-lg"></span>
                </a>
            }
        </div>
    </div>
</div>
<RadzenTemplateForm Data="Model" @ref="Form" TItem="CaseGetDetailViewModel">
    <div class="card">
        <div class="card-body">
            <LocationView ParmLocationViewModel="Model.CaseLocation"/>
        </div>
    </div>
</RadzenTemplateForm>
@inherits EIDSS.Web.Components.Administration.Deduplication.Farm.FarmDetailsBase

<div class="form-row">
    <div class="col-6">
        <RadzenRadioButtonList class="form-control" Name="rboRecord" TValue="int" @bind-Value=@FarmDeduplicationService.RecordSelection
                               Change="@((args) => OnRecordSelectionChangeAsync(args))">
            <Items>
                <RadzenRadioButtonListItem Text="@Localizer.GetString(FieldLabelResourceKeyConstants.DeduplicationPersonSurvivorFieldLabel)" Value="1" />
                <RadzenRadioButtonListItem Text="@Localizer.GetString(FieldLabelResourceKeyConstants.DeduplicationPersonSupersededFieldLabel)" Value="2" />
            </Items>
        </RadzenRadioButtonList>
        <div class="card-header" id="Info"></div>
        <RadzenCheckBox Name="chkCheckAllInfo" @bind-Value=@FarmDeduplicationService.chkCheckAll TValue="bool" Change="@((args) => OnCheckAllInfoChangeAsync(args))" />
        <RadzenLabel Text="@Localizer.GetString(FieldLabelResourceKeyConstants.DeduplicationPersonCheckAllFieldLabel)" Component="chkCheckAllInfo" Style="margin-left: 8px; vertical-align: middle;" />
    </div>
    <div class="col-6">
        <RadzenRadioButtonList class="form-control" Name="rboRecord2" TValue="int" @bind-Value=@FarmDeduplicationService.Record2Selection
                               Change="@((args) => OnRecord2SelectionChangeAsync(args))">
            <Items>
                <RadzenRadioButtonListItem Text="@Localizer.GetString(FieldLabelResourceKeyConstants.DeduplicationPersonSurvivorFieldLabel)" Value="1" />
                <RadzenRadioButtonListItem Text="@Localizer.GetString(FieldLabelResourceKeyConstants.DeduplicationPersonSupersededFieldLabel)" Value="2" />
            </Items>
        </RadzenRadioButtonList>
        <div class="card-header" id="Info2"></div>
        <RadzenCheckBox Name="chkCheckAllInfo2" @bind-Value=@FarmDeduplicationService.chkCheckAll2 TValue="bool" Change="@((args) => OnCheckAllInfo2ChangeAsync(args))" />
        <RadzenLabel Text="@Localizer.GetString(FieldLabelResourceKeyConstants.DeduplicationPersonCheckAllFieldLabel)" Component="chkCheckAllInfo2" Style="margin-left: 8px; vertical-align: middle;" />
    </div>
</div>
<div class="row">
    <div class="col-6 mx-auto">
        <RadzenCard>
            @if (FarmDeduplicationService.InfoList != null)
            {

                @*       <RadzenCheckBoxList id="rcblInfo" Name="rcblInfo" AllowClear="true" TValue="int" @bind-Value=@FarmDeduplicationService.InfoValues
                    Orientation="Orientation.Horizontal" Change=@OnCheckBoxListInfoSelectionChangeAsync>
                    <Items>
                    @foreach (Field item in FarmDeduplicationService.InfoList)
                    {
                    <div  Style="width:300px;">


                    </Items>
                    </RadzenCheckBoxList>*@
                <RadzenDataList WrapItems=false AllowPaging=false Data=FarmDeduplicationService.InfoList TItem="Field" PagerHorizontalAlign="HorizontalAlign.Left" ShowPagingSummary=false >
                    <Template Context="field">
                    @if (field.Index < RegionID)
                    {
                        <RadzenCheckBox @bind-Value="field.Checked" Name=@field.Key TValue="bool" Disabled=@field.Disabled TriState=false Style="vertical-align: top !important;"  Change="@((args) => OnDataListSelectionChangeAsync(args, field.Index))"/>
                        <div class="ml-2 d-inline-block vertical-align-middle">
                            <RadzenLabel Text="@field.Label" Component=@field.Key Style=@($"vertical-align: middle; {@field.Color}") />
                            <span>@(field.Value)</span>
                        </div>
                    }
                    else
                    {
                        <RadzenPanel Visible="@(field.Index < RegionID)">
                        <RadzenCheckBox @bind-Value="field.Checked" Name=@field.Key Disabled=@field.Disabled TriState=false Style="vertical-align: top !important;" />
                        <div class="ml-2 d-inline-block vertical-align-middle">
                            <RadzenLabel Text="@field.Label" Component=@field.Key Style=@($"vertical-align: middle; {@field.Color}") />
                            <span>@(field.Value)</span>
                        </div>
                        </RadzenPanel>
                    }
                    </Template>
                </RadzenDataList>
            }
        </RadzenCard>
    </div>
    <div class="col-6">
        <RadzenCard>
            @if (FarmDeduplicationService.InfoList2 != null)
            {
                @*         <RadzenCheckBoxList id="rcblInfo2" Name="rcblInfo2" AllowClear="true" TValue="int" @bind-Value=@FarmDeduplicationService.InfoValues2
                    Orientation="Orientation.Horizontal" Change=@OnCheckBoxListInfo2SelectionChangeAsync>

@inherits EIDSS.Web.Components.Administration.Deduplication.Person.ReviewBase

            <div class="form-row">
                <div class="col-md-12">
                     <RadzenCard>
                        <div class="card-header" id="ReviewInformation">
                            <button class="btn d-inline-block" @onclick=@(() => EditClickAsync(0))>
                            <h4 class="d-inline-block" style="line-height: 1.5rem; padding: 0.375rem 0.75rem;">Information</h4>
                            <i class="fas fa-edit fa-lg"></i></button>
                        </div>
                        <RadzenCheckBoxList id="rcblReviewInfo" Name="rcblReviewInfo" AllowClear="true" @ref="rcblReviewInfo" TValue="int" @bind-Value=@PersonDeduplicationService.SurvivorInfoValues
                                Orientation="Orientation.Horizontal" class="form-control">
                        <Items>
                        @foreach (Field item in PersonDeduplicationService.SurvivorInfoList)
                        {
                            <RadzenCheckBoxListItem Text="@item.Label" Value="@item.Index" Disabled="item.Disabled" Visible="@(item.Index < GenderTypeID)" />
                        }
                        </Items>
                        </RadzenCheckBoxList>
                       </RadzenCard>
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-12">
                    <RadzenCard >
                        <div class="card-header" id="ReviewAddress">
                            <button class="btn d-inline-block" @onclick=@(() => EditClickAsync(1))>
                            <h4 class="d-inline-block" style="line-height: 1.5rem; padding: 0.375rem 0.75rem;">Address</h4>
                            <i class="fas fa-edit fa-lg"></i></button>
                        </div>
                    <RadzenCheckBoxList id="rcblReviewAddress" Name="rcblReviewAddress" AllowClear="true" TValue="int" @bind-Value=@PersonDeduplicationService.SurvivorAddressValues
                                Orientation="Orientation.Horizontal" class="form-control">
                    <Items>
                    @foreach (Field item in PersonDeduplicationService.SurvivorAddressList)
                    {
                        <RadzenCheckBoxListItem Text="@item.Label" Value="@item.Index" Disabled="item.Disabled" Visible="@(item.Index < HumanidfsRegion)" Style="@item.Color" />
                    }
                    </Items>
                    </RadzenCheckBoxList>
                      </RadzenCard>
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-12">
                      <RadzenCard>
                        <div class="card-header" id="ReviewAddress">
                            <button class="btn d-inline-block" @onclick=@(() => EditClickAsync(1))>
                            <h4 class="d-inline-block" style="line-height: 1.5rem; padding: 0.375rem 0.75rem;">Employment</h4>
                            <i class="fas fa-edit fa-lg"></i></button>
                        </div>
                    <RadzenCheckBoxList id="rcblReviewEmp" Name="rcblReviewEmp" AllowClear="true" TValue="int" @bind-Value=@PersonDeduplicationService.SurvivorEmpValues
                                Orientation="Orientation.Horizontal" class="form-control" >
                    <Items>
                    @foreach (Field item in PersonDeduplicationService.SurvivorEmpList)
                    {
                        <RadzenCheckBoxListItem Text="@item.Label" Value="@item.Index" Disabled="item.Disabled" Visible="@(item.Index < IsEmployedTypeID)" Style="@item.Color" />
                    }
                    </Items>
                </RadzenCheckBoxList>
                      </RadzenCard>
                </div>
            </div>

        <div class="card-footer">
            <div class="row">
                <div class="col-md-12">
                    <button id="cancelButton" class="btn btn-outline-primary" type="button" >@Localizer.GetString(ButtonResourceKeyConstants.CancelButton)</button>
                    <button id="saveButton" type="button" class="btn btn-primary" @onclick="OnSaveAsync">@Localizer.GetString(@ButtonResourceKeyConstants.SaveButton)</button>
                </div>
            </div>
        </div>